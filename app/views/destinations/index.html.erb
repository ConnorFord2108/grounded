<div class="container">
  <h1>There are <%= @near_destinations.count %> grounded travel locations within <%= @max_travel_time/3600.to_f %> hours from <%= @city %> </h1>
  <%= @near_destinations.each do |dest| %>
      <h2><%= dest[:name] %> is <%= dest[:travel_time]/60 %> minutes from <%= @city %> by car </h2>
      <h2>Description: <%= dest[:description] %></h2>
      <img src="<%= dest[:picture_url] %>" alt="Picture of <%= dest[:name] %>" height="400">
  <% end %>
</div>
