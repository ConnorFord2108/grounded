<div class="container">
  <div class="row my-3">
    <div class="col-12">
      <div class="text-center ">
        <h1>GROUNDED Locations!</h1>
        <div class="form index-form">
          <%= form_tag destinations_path, method: :get, class: "d-flex" do %>
            <%= text_field_tag :search_term,
              params[:search_term],
              class: "form-control bg-white",
              value: params[:search_term]
            %>

            <%= number_field_tag :max_travel_hours,
              params[:max_travel_hours],
              class: "form-control bg-white",
              value: params[:max_travel_hours]
            %>
            <%= submit_tag "Update Grounded Trips", class: "button-banner" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <div class="shadow-sm p-3 mb-5 bg-white h-100">
      <div class="map">
      <div style="width: 100%; height: 600px;"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      </div>
      </div>
    </div>

    <div class="col-8">
        <% @near_destinations.each do |dest| %>
          <% destination_instance = Destination.find { |i| i.wikidata_id == dest[:wikidata_id] } %>
          <%= link_to destination_path(destination_instance), :action => 'go', :class => "text-decoration-none" do %>
            <div class="card-index">
              <div class="card-index-infos">
                <div>
                  <div class="card-index-infos-topline">
                    <h3><%= dest[:name] %> </h3>
                    <% hours = dest[:travel_time] / 3600 %>
                    <% minutes = dest[:travel_time] % 3600 / 60 %>
                    <p class="card-index-p"> <i class="fas fa-car-side"></i> <%= hours "h" if hours > 0 %> <%= minutes %> min</p>
                  </div>
                  <p class="card-index-p"><%= dest[:description] %></p>
                </div>
                  <p class="card-index-p"><i class="fas fa-tag"></i>Tags to be added</p>
              </div>
              <div class="card-index-img-div" style="background-image: url(<%= dest[:picture_url] %>);">
                <div class="card-index-star-holder">
                  <% @rating=4.5 %>
                  <%= render 'shared/stars' %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
